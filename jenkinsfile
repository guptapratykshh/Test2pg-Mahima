pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage('Build'){
            steps{
            sh 'mvn clean package'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy'
                echo 'Deploy completed'
            }
        }
    }
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
    failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}